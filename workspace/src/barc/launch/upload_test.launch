<launch>
    <!-- ARDUINO -->
    <!--  * encoders and ultrasound sensors -->
    <node pkg="rosserial_python" type="serial_node.py" name="arduino_node" >
        <param name="port" value="/dev/ttyUSB0" />
    </node>


    <!-- IMU -->
    <node pkg="myahrs_driver" type="myahrs_driver" name="myahrs_driver">
        <param name="port" value="/dev/ttyACM0" />
        <param name="baud_rate" value="115200" />
    </node>

    <!-- CAMERA -->
    <node pkg="uvc_camera" type="uvc_camera_node" name="barc_cam">
        <param name="index" value="0"/>
        <param name="device" value="/dev/video0"/>
        <param name="width" value="640"/>
        <param name="height" value="480"/>
    </node>
    <node pkg="image_transport" type="republish" name="compressed_transformation"
        args="in:=/image_raw compressed out:=/image_transformed" />

    
    <!-- RECORD -->
    <node pkg="barc" type="record_experiment.py" name="record_experiment" output="screen">
        <param name="experiment_name" value="redone_steering2-1575" />
        <param name="camera_on" value="true" />
    </node>

    <!-- EXPERIMENT-->
    <node pkg="lab4" type="SteeringMapping.py" name="Model_ID">
    </node>

</launch>
